@model Bulky.Models.Product

@{
    ViewData["Title"] = "DELETE";
}

<div class="card shadow border-0 mt-4">
    <div class="cardaccordion-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Delete">
            <div class="form-floating py-2 col-12">
                <input asp-for="Title" class="form-control border-0 shadow" />
                <label class="ms-2" asp-for="Title"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Description" class="form-control border-0 shadow" />
                <label class="ms-2" asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ISBN" class="form-control border-0 shadow" />
                <label class="ms-2" asp-for="ISBN"></label>
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Author" class="form-control border-0 shadow" />
                <label class="ms-2" asp-for="Author"></label>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ListPrice" class="form-control border-0 shadow" />
                <label class="ms-2" asp-for="ListPrice"></label>
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price" class="form-control border-0 shadow" />
                <label class="ms-2" asp-for="Price"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price50" class="form-control border-0 shadow" />
                <label class="ms-2" asp-for="Price50"></label>
                <span asp-validation-for="Price50" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price100" class="form-control border-0 shadow" />
                <label class="ms-2" asp-for="Price100"></label>
                <span asp-validation-for="Price100" class="text-danger"></span>
            </div>
            <div class="form-group row mt-4">
                <div class="col-2 col-md-1">
                <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
                <div class="col-3">
                    <a asp-controller="Product" asp-action="Index" class="btn form-control btn-outline-secondary">Back to list</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
